           font-size 12px


// 谷歌外卖登录样式
.guigu_waimai
  width 100%
  height 100%
  background #fff
  .iconfont
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    height 50px
    box-sizing border-box
    padding 5px 0 0 5px
  .guigu_name
    display flex
    justify-content center
    flex-direction column
    align-items center
    margin-bottom 10px
    .guigu-title
      font-size 40px
      font-weight bold
      color #02a774
      margin-bottom 25px
    .guigu_login
      font-size 12px
      >a
        margin 0 20px
        padding-bottom 3px
        &.on
          color  #02a774
          border-bottom  1px solid #02a774

  .guigu_form
    width 80%
    margin 10px auto
    >form
      text-align center
      .shoujihao-wrap
        height 30px
        border 1px solid #ddd
        font-size 10px
        display flex
        justify-content space-between
        align-items center
        padding 5px 10px
        color #ddd
        margin-bottom 10px
        >input
          height 30px
          font-size 12px
      .password
        .flag
          position relative
          border 1px solid #ddd
          width 40px
          height 16px
          border-radius 8px
          color black
          .abc
            position absolute
            left 1px
            bottom 3px
          .point
            position absolute

            right 5px
            bottom 3px
          .circl
            display block
            width 16px
            height 16px
            border 1px solid #ddd
            border-radius 8px
            background #fff
            position absolute
            top -1px
            //left 0
            right 0
            bottom 0
      .text
        margin 10px 0
        >p
          line-height 16px
          font-size 12px
          color #ddd
          >a
            color #02a774
      .btn
        width 100%
        height 40px
        border none
        background yellowgreen
        color #fff
        border-radius 4px

      >p
        text-align center
        font-size 12px
        color #ddd
        margin-top 20px


