//引入实现1px像素比文件
@import "mixin.styl"
// app样式
#app
  width 100%
  height 100%
  background #f5f5f5
  .content
    width 100%
    height 100%
    margin-top 50px
    .main_content
      position relative
      width 100%
      height 100%
      display none
      &.on
        display block

  // 头部样式
  .msite_header
    position fixed
    top 0
    left 0
    right 0
    height 50px
    background #02a774
    display flex
    justify-content space-around
    align-items center
    font-size 16px
    z-index 200
    >a
      color #fff
      .header_login_text
        font-size 12px

  //首页 轮播样式
.msite_nav
  bottom-border-1px(#e4e4e4)
  margin-top 45px
  height 200px
  background #fff
  .swiper-container
    width 100%
    height 100%
    .swiper-wrapper
      width 100%
      height 100%
      .swiper-slide
        display flex
        justify-content center
        align-items flex-start
        flex-wrap wrap
        .link_to_food
          width 25%
          .food_container
            display block
            width 100%
            text-align center
            padding-bottom 10px
            font-size 0
            img
              display inline-block
              width 50px
              height 50px
          span
            display block
            width 100%
            text-align center
            font-size 13px
            color #666
    .swiper-pagination
      >span.swiper-pagination-bullet-active
        background #02a774

 // 首页主体内容样式
.main_container
  width 100%
  margin-top 10px
  background #fff
  .main_item
    margin 10px
    .xuanxiang
      padding-top 15px
      margin-top 10px
      margin-bottom 20px
      .iconfont
        font-size 30px
    .xuanxiang_detail
      overflow hidden
      width 100%
      margin-bottom 30px
      .item_xuanxiang
        display block
        width 100%
      .photo
        width 20%
        float left
        >img
          width 100%
      .describe
        float right
        width 78%
        font-size 12px
        display flex
        align-content space-between
        flex-direction column
        .detail
          //margin-bottom  10px
          .pinpai_left
            float left
            .pinpai
              background yellow
            .pinpai_content
              font-size 20px
              font-weight bold
              color black
          .pinpai_right
            float right
            >span
              font-size 10px
              border 1px solid #ddd
        .start
          font-size 12px
          transform scaleY(.7)
          margin 10px 0
          .start_left
            float left
            >img
              width 10px
              height 10px
          .start_right
            float right
            :nth-child(1)
              display inline-block
              vertical-align middle
              box-sizing border-box
              font-size 10px
              padding 3px
              background green
              color #fff
            :nth-child(2)
              display inline-block
              vertical-align middle
              box-sizing border-box
              font-size 10px
              padding 3px
              color green
              border 1px solid green
        .peisong
          .peisong_left
            float left
            font-size 12px

// 搜索的样式
.search
  .search_header
    position fixed
    top 0
    left 0
    right 0
    height 50px
    font-size 20px
    background #02a774
    color #fff
    display flex
    justify-content center
    align-items center
    margin-bottom 10px
  .search_content
    display flex
    justify-content center
    align-items center
    height 50px
    background #fff
    margin-top 50px
    >input
      width 75%
      height 30px
      font-size 12px
      outline none
      background #f5f5f5
      border-radius 3px
      margin-right 10px
    >button
      width 15%
      height 30px
      color #fff
      border-radius 3px
      border 0
      background #02a774



// 订单样式
.order
  width 100%
  text-align center
  .order_header
    position fixed
    top 0
    left 0
    right 0
    height 50px
    font-size 20px
    background #02a774
    color #fff
    display flex
    align-items center
    justify-content center
  .order_content
    padding-top 120px
    display flex
    align-items center
    flex-direction column
    font-size 16px
    color gray
    >img
      width 250px
      height 250px
    >button
      color #fff
      padding 10px 10px
      border none
      background #02a774
      margin-top 20px
      border-radius 4px



// 我的样式
.main_content
  width 100%
  height 100%
  .profile
     width 100%
     height 100%
     position relative
     .my_header
       bottom-border-1px(#fff)
       position fixed
       width 100%
       height 50px
       top 0
       left 0
       background #02a774
       text-align center
       line-height 50px
       color #fff
       font-size 20px
